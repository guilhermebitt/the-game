#:kivy 2.3
<Options>:
    XImage:
        source: 'assets/images/interrogation_point.png'
        size: root.width, root.height
        background_color: 0, 0, 0, 0.5
        fit_mode: 'fill'

    FloatLayout:
        size: root.width, root.height

        Label:
            id: 1
            text: 'Options'
            size_hint: 0.5, 0.3
            font_size: 62
            font_name: 'OLDENGL'
            pos_hint: {'center_x': 0.5, 'top': 0.97}
        XButton:
            text: 'Option1'
            pos_hint: {'center_x': 0.5, 'top': 0.7}
            #on_press: app.screen_manager.current = 'the'; root.parent.change_menu()

        XButton:
            text: 'Options2'
            pos_hint: {'center_x': 0.5, 'top': 0.58}
        
        XButton:
            text: 'Back'
            pos_hint: {'center_x': 0.5, 'top': 0.46}
            on_release: app.screen_manager.current = 'menu'