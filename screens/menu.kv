#:kivy 2.3
<Button>
    size_hint: 0.3, 0.1

<Menu>:
    XImage:
        source: 'assets/images/interrogation_point.png'
        size: root.width, root.height
        background_color: 0, 0, 0, 0.5
        fit_mode: 'fill'

    FloatLayout:
        size: root.width, root.height

        Label:
            id: 1
            text: 'The'
            size_hint: 0.5, 0.3
            font_size: 62
            font_name: 'OLDENGL'
            pos_hint: {'center_x': 0.5, 'top': 0.97}
        XButton:
            text: 'Play'
            pos_hint: {'center_x': 0.5, 'top': 0.7}
            on_release: app.screen_manager.current = 'cutscene'; root.parent.change_menu()

        XButton:
            text: 'Options'
            pos_hint: {'center_x': 0.5, 'top': 0.58}
            on_release: app.screen_manager.current = 'options';
        
        XButton:
            text: 'Quit'
            pos_hint: {'center_x': 0.5, 'top': 0.46}
            on_release: app.quit()