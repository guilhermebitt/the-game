#:kivy 2.3
<Death>:
    on_kv_post:
        self.player = self.parent.parent
    XImage:
        id: imagem
        source: 'assets/images/interrogation_point.png'
        size: root.width, root.height
        background_color: 0, 0, 0, 0.6
        fit_mode: 'fill'

    FloatLayout:
        size: root.width, root.height

        Label:
            id: 1
            text: 'The... End?'
            size_hint: 0.5, 0.3
            font_size: 62
            font_name: 'OLDENGL'
            pos_hint: {'center_x': 0.5, 'top': 0.97}
        XButton:
            text: 'Try Again'
            pos_hint: {'center_x': 0.5, 'top': 0.7}
            on_release: app.restart_game(); app.screen_manager.current = 'the'

        XButton:
            text: 'Main Menu'
            pos_hint: {'center_x': 0.5, 'top': 0.58}
            on_release: app.restart_game(); app.screen_manager.current = 'menu'; root.parent.start_menu_music(); root.parent.on_leave()
        
        XButton:
            text: 'Quit'
            pos_hint: {'center_x': 0.5, 'top': 0.46}
            on_release: app.quit()